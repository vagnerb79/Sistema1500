<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Sistema Mentoria</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="~/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/bower_components/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/bower_components/Ionicons/css/ionicons.min.css">
    <link rel="stylesheet" href="~/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css">
    <link rel="stylesheet" href="~/dist/css/AdminLTE.min.css">
    <link rel="stylesheet" href="~/dist/css/skins/_all-skins.min.css">
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
</head>

<style>
    #table, th {
        align-items:center;
        text-align:center;
    }

    #checkCentral {
        align-items: center;
        text-align: center;
    }
</style>

<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        <header class="main-header">
            <a href="Home" class="logo">
                <span class="logo-mini"><b>1500</b></span>
                <span class="logo-lg"><b>1500fh</b></span>
            </a>

            <nav class="navbar navbar-static-top">
                @if (User.Identity.IsAuthenticated)
                {

                    <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>

                }

                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <!-- Menu para adicionar o Login -->
                        <partial name="_LoginPartial" />
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li>
                                <a href="#" data-toggle="control-sidebar"><i class="fa fa-cog fa-spin fa-lg"></i></a>
                            </li>
                        }
                    </ul>
                </div>
            </nav>
        </header>

        @if (User.Identity.IsAuthenticated)
        {
            <aside class="main-sidebar">
                <!-- INÍCIO MENU PRINCIPAL LADO ESQUERDO -->
                <section class="sidebar">
                    <!-- AVATAR, NOME E ONLINE -->
                    <div class="user-panel">
                        <div class="pull-left image">
                            <img src="../../dist/img/avatar5.png" class="img-circle" alt="User Image">
                        </div>
                        <div class="pull-left info">
                            <p>Vagner Bezerra</p>
                            <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                        </div>
                    </div>
                    <!-- LINHA ABAIXO DO AVATAR -->
                    <form action="#" method="get" class="sidebar-form">
                        <div class="input-group">
                        </div>
                    </form>
                    <!-- MENU PRINCIPAL LADO ESQUERDO -->
                    <ul class="sidebar-menu" data-widget="tree">
                        <li class="header">MENU PRINCIPAL</li>
                        <li class="treeview">
                            <a href="#">
                                <i class="fa fa-table"></i> <span>Pessoas</span>
                                <span class="pull-right-container">
                                    <i class="fa fa-angle-left pull-right"></i>
                                </span>
                            </a>
                            <ul class="treeview-menu">
                                <li class="nav-item"><a class="nav-link text-white" asp-controller="People" asp-action="Teacher"><i i class="fa fa-circle-o"></i>Mentores</a></li>
                                <li class="nav-item"><a class="nav-link text-white" asp-controller="People" asp-action="Student"><i i class="fa fa-circle-o"></i>Mentorados</a></li>
                                <li class="nav-item"><a class="nav-link text-white" asp-controller="TypeConsultors" asp-action="Index"><i i class="fa fa-circle-o"></i>Consultores</a></li>
                            </ul>
                        </li>

                        <li class="treeview">
                            <a href="#">
                                <i class="fa fa-table"></i> <span>Cadastros</span>
                                <span class="pull-right-container">
                                    <i class="fa fa-angle-left pull-right"></i>
                                </span>
                            </a>
                            <ul class="treeview-menu">
                                <li class="nav-item"><a class="nav-link text-white" asp-controller="Circles" asp-action="Index"><i i class="fa fa-circle-o"></i>Círculos</a></li>
                                <li class="nav-item"><a class="nav-link text-white" asp-controller="Themes" asp-action="Index"><i i class="fa fa-circle-o"></i>Temas</a></li>
                                <li class="nav-item"><a class="nav-link text-white" asp-controller="Projects" asp-action="Index"><i i class="fa fa-circle-o"></i>Projetos</a></li>
                            </ul>
                        </li>

                        <li class="treeview">
                            <a href="#">
                                <i class="fa fa-table"></i> <span>Aprendizados</span>
                                <span class="pull-right-container">
                                    <i class="fa fa-angle-left pull-right"></i>
                                </span>
                            </a>
                            <ul class="treeview-menu">
                                <li class="nav-item"><a class="nav-link text-white" asp-controller="Learnings" asp-action="Index"><i i class="fa fa-circle-o"></i>Aprendizados</a></li>
                                <li class="nav-item"><a class="nav-link text-white" asp-controller="Feedbacks" asp-action="Index"><i i class="fa fa-circle-o"></i>Feedbacks</a></li>
                            </ul>
                        </li>

                        <li class="treeview">
                            <a href="#">
                                <i class="fa fa-table"></i> <span>Controles</span>
                                <span class="pull-right-container">
                                    <i class="fa fa-angle-left pull-right"></i>
                                </span>
                            </a>
                            <ul class="treeview-menu">
                                <li class="nav-item"><a class="nav-link text-white" asp-controller="ActualStates" asp-action="Index"><i i class="fa fa-circle-o"></i>Estado Atual</a></li>
                                <li class="nav-item"><a class="nav-link text-white" asp-controller="HoursDays" asp-action="Index"><i i class="fa fa-circle-o"></i>Horas Dias</a></li>
                            </ul>
                        </li>

                        <li class="treeview">
                            <a href="#">
                                <i class="fa fa-table"></i> <span>Financeiro</span>
                                <span class="pull-right-container">
                                    <i class="fa fa-angle-left pull-right"></i>
                                </span>
                            </a>
                            <ul class="treeview-menu">
                                <li class="nav-item"><a class="nav-link text-white" asp-controller="Enterprises" asp-action="Index"><i i class="fa fa-circle-o"></i>Empresas</a></li>
                                <li class="nav-item"><a class="nav-link text-white" asp-controller="CostCenters" asp-action="Index"><i i class="fa fa-circle-o"></i>Centros de Custos</a></li>
                                <li class="nav-item"><a class="nav-link text-white" asp-controller="Captures" asp-action="Index"><i i class="fa fa-circle-o"></i>Contas</a></li>
                                <li class="nav-item"><a class="nav-link text-white" asp-controller="BankAccounts" asp-action="Index"><i i class="fa fa-circle-o"></i>Bancos</a></li>
                                <li class="nav-item"><a class="nav-link text-white" asp-controller="Expenses" asp-action="Index"><i i class="fa fa-circle-o"></i>Despesas</a></li>
                            </ul>
                        </li>

                        <li class="header">AVISOS</li>
                        <li><a href="#"><i class="fa fa-circle-o text-red"></i> <span>Importante</span></a></li>
                        <li><a href="#"><i class="fa fa-circle-o text-yellow"></i> <span>Atenção</span></a></li>
                        <li><a href="#"><i class="fa fa-circle-o text-aqua"></i> <span>Informação</span></a></li>
                    </ul>
                </section>
            </aside>
        }
        <!-- FIM MENU PRINCIPAL LADO ESQUERDO -->
        <!-- RENDER NECESSÁRIO -->
        <div class="content-wrapper">
            <div class="card">
                <div class="card-header">
                    <div class="card-body">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>

        <!-- RODAPÉ -->
        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 1.0.0
            </div>
            <strong>Copyright &copy; 2023 <a href="https://adminlte.io">VAGNER-1500fh</a>.</strong> Todos os direitos reservados.
        </footer>

        <!-- MENU LATERAL DIREITO -->
        @if (User.Identity.IsAuthenticated)
        {
            <aside class="control-sidebar control-sidebar-dark">

                <ul class="nav nav-tabs nav-justified control-sidebar-tabs">
                    <li><a href="#control-sidebar-home-tab" data-toggle="tab"><i class="fa fa-home"></i></a></li>
                    <li><a href="#control-sidebar-settings-tab" data-toggle="tab"><i class="fa fa-gears"></i></a></li>
                </ul>

                <div class="tab-content">
                    <!-- ATIVIDADES -->
                    <div class="tab-pane" id="control-sidebar-home-tab">
                        <h3 class="control-sidebar-heading"> Atividades </h3>
                        <ul class="control-sidebar-menu">

                            <li>
                                <a href="javascript:void(0)">
                                    <i class="menu-icon fa fa-user bg-yellow"></i>

                                    <div class="menu-info">
                                        <h4 class="control-sidebar-subheading"> Reunião com equipe </h4>
                                        <p>21/04/2023-10h</p>
                                    </div>
                                </a>
                            </li>
                            <li>
                                <a href="javascript:void(0)">
                                    <i class="menu-icon fa fa-envelope-o bg-light-blue"></i>

                                    <div class="menu-info">
                                        <h4 class="control-sidebar-subheading"> Enviar E-mail Cliente </h4>
                                        <p>google@example.com</p>
                                    </div>
                                </a>
                            </li>
                            <li>
                                <a href="javascript:void(0)">
                                    <i class="menu-icon fa fa-file-code-o bg-green"></i>

                                    <div class="menu-info">
                                        <h4 class="control-sidebar-subheading"> Corrigir Layout </h4>
                                        <p>Projeto-1500fh</p>
                                    </div>
                                </a>
                            </li>
                        </ul>

                        <h3 class="control-sidebar-heading"> Progresso das Tarefas </h3>
                        <ul class="control-sidebar-menu">
                            <li>
                                <a href="javascript:void(0)">
                                    <h4 class="control-sidebar-subheading">
                                        Criar Diagrama
                                        <span class="label label-danger pull-right">70%</span>
                                    </h4>

                                    <div class="progress progress-xxs">
                                        <div class="progress-bar progress-bar-danger" style="width: 70%"></div>
                                    </div>
                                </a>
                            </li>
                            <li>
                                <a href="javascript:void(0)">
                                    <h4 class="control-sidebar-subheading">
                                        Ajustar Banco de Dados
                                        <span class="label label-success pull-right">95%</span>
                                    </h4>

                                    <div class="progress progress-xxs">
                                        <div class="progress-bar progress-bar-success" style="width: 95%"></div>
                                    </div>
                                </a>
                            </li>
                            <li>
                                <a href="javascript:void(0)">
                                    <h4 class="control-sidebar-subheading">
                                        Incluir Autenticação
                                        <span class="label label-warning pull-right">50%</span>
                                    </h4>

                                    <div class="progress progress-xxs">
                                        <div class="progress-bar progress-bar-warning" style="width: 50%"></div>
                                    </div>
                                </a>
                            </li>
                            <li>
                                <a href="javascript:void(0)">
                                    <h4 class="control-sidebar-subheading">
                                        Checar Features GitHub
                                        <span class="label label-primary pull-right">68%</span>
                                    </h4>

                                    <div class="progress progress-xxs">
                                        <div class="progress-bar progress-bar-primary" style="width: 68%"></div>
                                    </div>
                                </a>
                            </li>
                        </ul>
                    </div>

                    <!-- CONFIGURAÇÕES -->
                    <div class="tab-pane" id="control-sidebar-stats-tab">Stats Tab Content</div>

                    <div class="tab-pane" id="control-sidebar-settings-tab">
                        <form method="post">
                            <h3 class="control-sidebar-heading"> Configurações Gerais </h3>

                            <div class="form-group">
                                <label class="control-sidebar-subheading">
                                    Painel de Relatório
                                    <input type="checkbox" class="pull-right" checked>
                                </label>

                                <p>
                                    Informações sobre o Relatórios
                                </p>
                            </div>

                            <div class="form-group">
                                <label class="control-sidebar-subheading">
                                    Redirecionamento de e-mail
                                    <input type="checkbox" class="pull-right" checked>
                                </label>

                                <p>
                                    Outra opções estão disponíveis
                                </p>
                            </div>

                            <div class="form-group">
                                <label class="control-sidebar-subheading">
                                    Mencionar autor
                                    <input type="checkbox" class="pull-right" checked>
                                </label>

                                <p>
                                    Outra opções estão disponíveis
                                </p>
                            </div>

                            <h3 class="control-sidebar-heading"> Configurações chat </h3>

                            <div class="form-group">
                                <label class="control-sidebar-subheading">
                                    Mostrar-me como online
                                    <input type="checkbox" class="pull-right" checked>
                                </label>
                            </div>

                            <div class="form-group">
                                <label class="control-sidebar-subheading">
                                    Desligar notificações
                                    <input type="checkbox" class="pull-right">
                                </label>
                            </div>

                            <div class="form-group">
                                <label class="control-sidebar-subheading">
                                    Excluir histórico chat
                                    <a href="javascript:void(0)" class="text-red pull-right"><i class="fa fa-trash-o"></i></a>
                                </label>
                            </div>
                        </form>
                    </div>
                </div>
            </aside>
        }
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="~/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="~/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <script src="~/bower_components/jquery-slimscroll/jquery.slimscroll.min.js"></script>
    <script src="~/bower_components/fastclick/lib/fastclick.js"></script>
    <script src="~/dist/js/adminlte.min.js"></script>
    <script src="~/dist/js/demo.js"></script>
    @RenderSection("Scripts", required: false)

    <script>
        $(function () {
            $('#table').DataTable()
            $('#example2').DataTable({
                'paging': true,
                'lengthChange': false,
                'searching': false,
                'ordering': true,
                'info': true,
                'autoWidth': false
            })
        })
    </script>
</body>
</html>

