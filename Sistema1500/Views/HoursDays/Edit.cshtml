@model Sistema1500.Models.HoursDay

@{
    ViewData["Title"] = "Edit";
}

<section class="content-header">
    <h1>1500fh<small>Desenvolvedor Full Stack</small></h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Horas Dia</h3>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="row" style="font-size: 16px; justify-content:center; display:flex">

                            <form asp-action="Edit" style="display:flex;gap:10px">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="col-sm-20">
                                    <input type="hidden" asp-for="Id" />
                                    <div class="form-group">
                                        <label asp-for="ActualStateId" class="control-label" style="color:blue"></label>
                                        <select asp-for="ActualStateId" class="form-control" asp-items="ViewBag.ActualStateId">
                                            <option> Selecione a opção </option>
                                        </select>
                                        <span asp-validation-for="ActualStateId" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Date" class="control-label" style="color:blue"></label>
                                        <input asp-for="Date" class="form-control" type="date" value="@Model.Date.ToString("yyyy-MM-dd")" />
                                        <span asp-validation-for="Date" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="RealTime" class="control-label" style="color:blue"></label>
                                        <input asp-for="RealTime" class="form-control" />
                                        <span asp-validation-for="RealTime" class="text-danger"></span>
                                    </div>

                                    <hr />
                                    <div class="form-group form-check">
                                        <label class="form-check-label">
                                            <input class="form-check-input" asp-for="Delivered" /> @Html.DisplayNameFor(model => model.Delivered)
                                        </label>
                                    </div>

                                    <hr />
                                <div class="form-group">
                                    <input type="submit" value="Salvar" class="btn btn-warning" />
                                </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div>
        <a asp-action="Index" style="font-size:16px; color:blue;"><i class="fa fa-undo"></i> Voltar</a>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
