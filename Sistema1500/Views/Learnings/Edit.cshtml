@model Sistema1500.Models.Learning

@{
    ViewData["Title"] = "Edit";
}

<section class="content-header">
    <h1>1500fh<small>Desenvolvedor Full Stack</small></h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Aprendizados</h3>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="row" style="font-size: 16px; justify-content:center; display:flex">

                            <form asp-action="Edit" style="display:flex;gap:10px">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="col-sm-5">
                                    <input type="hidden" asp-for="Id" />
                                    <div class="form-group">
                                        <label asp-for="Date" class="control-label" style="color:blue"></label>
                                        <input asp-for="Date" class="form-control" type="date" value="@Model.Date.ToString("yyyy-MM-dd")" />
                                        <span asp-validation-for="Date" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="CircleId" class="control-label" style="color:blue"></label>
                                        <select asp-for="CircleId" class="form-control" asp-items="ViewBag.CircleId">
                                            <option> Selecione a opção </option>
                                        </select>
                                        <span asp-validation-for="CircleId" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="ThemeId" class="control-label" style="color:blue"></label>
                                        <select asp-for="ThemeId" class="form-control" asp-items="ViewBag.ThemeId">
                                            <option> Selecione a opção </option>
                                        </select>
                                        <span asp-validation-for="ThemeId" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="StudentPersonId" class="control-label" style="color:blue"></label>
                                        <select asp-for="StudentPersonId" class="form-control" asp-items="ViewBag.StudentId">
                                            <option> Selecione a opção </option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="TeacherPersonId" class="control-label" style="color:blue"></label>
                                        <select asp-for="TeacherPersonId" class="form-control" asp-items="ViewBag.TeacherID">
                                            <option> Selecione a opção </option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-sm-5">
                                    <div class="form-group">
                                        <label asp-for="OportunityLearning" class="control-label" style="color:blue"></label>
                                        <input asp-for="OportunityLearning" class="form-control" />
                                        <span asp-validation-for="OportunityLearning" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="LearningAction" class="control-label" style="color:blue"></label>
                                        <input asp-for="LearningAction" class="form-control" />
                                        <span asp-validation-for="LearningAction" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="MeasurementDate" class="control-label" style="color:blue"></label>
                                        <input asp-for="MeasurementDate" class="form-control" type="date" value="@Model.MeasurementDate.ToString("yyyy-MM-dd")" />
                                        <span asp-validation-for="MeasurementDate" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="MeasurementForm" class="control-label" style="color:blue"></label>
                                        <input asp-for="MeasurementForm" class="form-control" />
                                        <span asp-validation-for="MeasurementForm" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Result" class="control-label" style="color:blue"></label>
                                        <input asp-for="Result" class="form-control" />
                                        <span asp-validation-for="Result" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-sm-5">
                                    <div class="form-group">
                                        <label asp-for="Comment" class="control-label" style="color:blue"></label>
                                        <input asp-for="Comment" class="form-control" />
                                        <span asp-validation-for="Comment" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Status" class="control-label" style="color:blue"></label>
                                        <select asp-for="Status" class="form-control">
                                            <option> Selecione a opção </option>
                                            <option value="0"> Branco </option>
                                            <option value="1"> Concluído </option>
                                        </select>
                                        <span asp-validation-for="Status" class="text-danger"></span>
                                    </div>
                                    <hr />
                                <div class="form-group">
                                    <input type="submit" value="Salvar" class="btn btn-warning" />
                                </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div>
        <a asp-action="Index" style="font-size:16px; color:blue;"><i class="fa fa-undo"></i> Voltar</a>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
