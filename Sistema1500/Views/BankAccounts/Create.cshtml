@model Sistema1500.Models.BankAccount

@{
    ViewData["Title"] = "Create";
}

<section class="content-header">
    <h1>1500fh<small>Desenvolvedor Full Stack</small></h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Conta Bancária</h3>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="row" style="font-size: 16px; justify-content:center; display:flex">

                            <form asp-action="Create" style="display:flex;gap:10px">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="col-lg-20">
                                    <div class="form-group">
                                        <label asp-for="Name" class="control-label" style="color:blue"></label>
                                        <input asp-for="Name" class="form-control" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="EnterpriseId" class="control-label" style="color:blue"></label>
                                        <select asp-for="EnterpriseId" class="form-control" asp-items="ViewBag.EnterpriseId"></select>
                                    </div>
                                    @*            <div class="form-group">
                                    <label asp-for="Balance" class="control-label" style="color:blue"></label>
                                    <input asp-for="Balance" class="form-control" />
                                    <span asp-validation-for="Balance" class="text-danger"></span>
                                    </div>*@
                                    <div class="form-group">
                                        <label asp-for="InitialBalance" class="control-label" style="color:blue"></label>
                                        <input asp-for="InitialBalance" class="form-control" />
                                        <span asp-validation-for="InitialBalance" class="text-danger"></span>
                                    </div>
                                    <hr />
                                    <div class="form-group">
                                        <input type="submit" value="Criar" class="btn btn-primary" />
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div>
        <a asp-action="Index" style="font-size:16px; color:blue;"><i class="fa fa-undo"></i> Voltar</a>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
